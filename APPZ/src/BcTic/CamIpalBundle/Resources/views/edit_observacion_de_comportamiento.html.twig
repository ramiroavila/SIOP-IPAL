            if ($(this).is(':checked')) {
              if ($(this).val() == 1) {
                $(this).parent().parent().parent().find("textarea").removeAttr("required");
              }
              if ($(this).val() == 2) {
                $(this).parent().parent().parent().find("textarea").attr("required", "required");
              }
              if ($(this).val() == 3) {
